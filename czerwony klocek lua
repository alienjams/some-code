local player = game.Players.LocalPlayer
local camera = game.Workspace.CurrentCamera
local userInputService = game:GetService("UserInputService")

local firstPersonView = false  -- Zmienna przechowująca stan widoku (pierwsza osoba / trzecia osoba)

-- Funkcja przełączająca widok
local function toggleView()
	if firstPersonView then
		camera.CameraSubject = player.Character.Humanoid
		camera.FieldOfView = 70 -- Domyślny FOV dla widoku z trzeciej osoby
	else
		camera.CameraSubject = player.Character.Head
		camera.FieldOfView = 70 -- Możesz dostosować FOV, jeśli chcesz
	end
	firstPersonView = not firstPersonView
end

-- Nasłuchiwanie na naciśnięcie przycisku "F" w celu przełączenia widoku
userInputService.InputBegan:Connect(function(input, gameProcessedEvent)
	if gameProcessedEvent then return end
	if input.KeyCode == Enum.KeyCode.F then
		toggleView()
	end
end)

-- Ustawienie początkowego widoku (z trzeciej osoby)
camera.CameraSubject = player.Character.Humanoid
